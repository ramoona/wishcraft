{
  "name": "wishcraft",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npx prisma generate && npx prisma migrate deploy && next build",
    "start": "next start",
    "lint": "next lint --no-cache",
    "prepare": "husky",
    "typecheck": "tsc --noEmit",
    "test:static": "pnpm lint && pnpm typecheck",
    "test:unit": "jest",
    "test": "pnpm test:static && pnpm test:unit",
    "db:migrate": "npx prisma migrate dev",
    "prisma:studio": "prisma studio --browser none",
    "prisma:generate": "prisma generate",
    "e2e-tests:dev-server": "env-cmd -f .env.test pnpm dev",
    "e2e-tests:prepare": "pnpm exec playwright install --with-deps chromium",
    "e2e-tests:run": "env-cmd -f .env.test pnpm exec playwright test",
    "e2e-tests:up": "docker compose -f docker-compose.e2e-tests.yaml up -d --wait",
    "e2e-tests:down": "docker compose -f docker-compose.e2e-tests.yaml down",
    "e2e-tests:headless": "pnpm e2e-tests:up && pnpm e2e-tests:db-reset && pnpm e2e-tests:run",
    "e2e-tests:ui": "pnpm e2e-tests:up && pnpm e2e-tests:db-reset && pnpm e2e-tests:run --ui",
    "e2e-tests:db-reset": "env-cmd -f .env.test npx prisma migrate reset --force && env-cmd -f .env.test prisma migrate deploy"
  },
  "dependencies": {
    "@hookform/resolvers": "^4.1.2",
    "@oslojs/crypto": "^1.0.1",
    "@oslojs/encoding": "^1.1.0",
    "@phosphor-icons/react": "^2.1.7",
    "@prisma/client": "^6.7.0",
    "@radix-ui/react-alert-dialog": "^1.1.11",
    "@radix-ui/react-avatar": "^1.1.7",
    "@radix-ui/react-dialog": "^1.1.11",
    "@radix-ui/react-dropdown-menu": "^2.1.12",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-label": "^2.1.4",
    "@radix-ui/react-radio-group": "^1.3.4",
    "@radix-ui/react-select": "^2.2.2",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.0",
    "@radix-ui/react-switch": "^1.2.2",
    "@radix-ui/react-tabs": "^1.1.9",
    "@radix-ui/react-tooltip": "^1.2.7",
    "@radix-ui/react-visually-hidden": "^1.2.0",
    "@types/luxon": "^3.6.2",
    "@vercel/analytics": "^1.5.0",
    "accept-language": "^3.0.20",
    "arctic": "^3.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "gray-matter": "^4.0.3",
    "i18next": "^24.2.2",
    "i18next-browser-languagedetector": "^8.1.0",
    "i18next-resources-to-backend": "^1.2.1",
    "lucide-react": "^0.513.0",
    "luxon": "^3.6.1",
    "marked": "^15.0.12",
    "next": "^15.3.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "prisma": "^6.7.0",
    "ramda": "^0.30.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.56.2",
    "react-i18next": "^15.5.1",
    "sonner": "^2.0.3",
    "tailwind-merge": "^3.2.0",
    "tailwindcss-animate": "^1.0.7",
    "ua-parser-js": "^2.0.3",
    "unique-names-generator": "^4.7.1",
    "vaul": "^1.1.2",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.26.0",
    "@playwright/test": "^1.55.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.15.3",
    "@types/ramda": "^0.30.2",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "env-cmd": "^11.0.0",
    "eslint": "^9.26.0",
    "eslint-config-next": "^15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^15.5.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.2",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "pnpm": {
    "ignoredBuiltDependencies": [
      "@vercel/speed-insights",
      "sharp"
    ],
    "onlyBuiltDependencies": [
      "@prisma/client",
      "@prisma/engines",
      "@vercel/speed-insights",
      "esbuild",
      "prisma",
      "sharp"
    ]
  },
  "prisma": {
    "seed": "ts-node -r tsconfig-paths/register --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  }
}
